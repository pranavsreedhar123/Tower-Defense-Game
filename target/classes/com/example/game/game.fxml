<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           prefHeight="480" prefWidth="750"
           fx:controller="com.example.game.LandscapeController">
    <VBox fx:id="enemyBox">
    <ImageView fx:id="enemy" />
        <ImageView fx:id="enemy2" />
    </VBox>
<GridPane fx:id="map" xmlns:fx="http://javafx.com/fxml"
          prefHeight="480" prefWidth="750">

    <VBox alignment="TOP_LEFT">
        <Button fx:id="quit" onAction="#onHomeScreen"/>
    </VBox>


        <Label fx:id="moneyText" wrapText="true" textFill="black" prefHeight="100" prefWidth="100">

            <font>
                <Font name="Arial Black" size="23"/>
            </font>
        </Label>
    <Label fx:id="healthText" wrapText="true" textFill="black" prefHeight="100" prefWidth="100">
        <font>
            <Font name="Arial Black" size="28"/>
        </font>
    </Label>
    <Label fx:id="dynamicHealthText" wrapText="true" textFill="black" prefHeight="100" prefWidth="100">
        <font>
            <Font name="Arial Black" size="28"/>
        </font>
    </Label>
    <Button fx:id="shop" onAction="#onShop"/>
    <Button fx:id="upgrade" onAction="#upgradeTower"/>
    <Button fx:id="start" onAction="#onPlay"/>



</GridPane>
</StackPane>

