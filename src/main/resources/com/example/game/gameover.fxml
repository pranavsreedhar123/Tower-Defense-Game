<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.game.GameOverController">
    <VBox alignment="CENTER">
        <padding>
            <Insets bottom="200.0" left="20.0" right="20.0" top="250.0"/>
        </padding>

        <Label fx:id="gameOverText" wrapText="true" alignment="CENTER" textFill="black">
            <font>
                <Font name="Arial Black" size="30"/>
            </font>
        </Label>

        <padding>
            <Insets bottom="50.0" left="20.0" right="20.0" top="150.0"/>
        </padding>

        <Label fx:id="enemiesKilledText" wrapText="true" alignment="CENTER" textFill="blue">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>

        <padding>
            <Insets bottom="50.0" left="20.0" right="20.0" top="50.0"/>
        </padding>

        <Label fx:id="damageDoneText" wrapText="true" alignment="CENTER" textFill="blue">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>

        <padding>
            <Insets bottom="50.0" left="20.0" right="20.0" top="50.0"/>
        </padding>

        <Label fx:id="moneyText" wrapText="true" alignment="CENTER" textFill="blue">
            <font>
                <Font name="Arial Black" size="20"/>
            </font>
        </Label>



        <HBox alignment="CENTER">
            <HBox>
                <Button fx:id="play" text="Play Again!" onAction="#onPlayButtonClick"/>
                <padding>
                    <Insets top="100.0" right="10.0"/>
                </padding>
            </HBox>
            <HBox>
                <padding>
                    <Insets top="100.0" left="10.0"/>
                </padding>
                <Button fx:id="quit" text="Quit" onAction="#onQuitButtonClick"/>
            </HBox>
        </HBox>
    </VBox>
    <VBox alignment="BOTTOM_CENTER">
        <padding>
            <Insets top="200.0"/>
        </padding>
        <Label fx:id="developersText"/>
    </VBox>
</VBox>

