<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.game.ShopController">
    <VBox alignment="TOP_LEFT">
        <Button fx:id="quit" onAction="#onGameScreen"/>
    </VBox>
    <VBox alignment="CENTER">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
        </padding>

        <Label fx:id="shopText" wrapText="true" alignment="TOP_CENTER" textFill="black">
            <font>
                <Font name="Arial Black" size="16"/>
            </font>
        </Label>
        <Label fx:id="shopMoney" wrapText="true" alignment="TOP_CENTER" textFill="black">
            <font>
                <Font name="Arial Black" size="14"/>
            </font>
        </Label>
        <HBox alignment="CENTER">
            <HBox>
                <VBox>
                    <Button text="Buy $100!" onAction="#purchaseBad"/>
                    <padding>
                        <Insets top="20.0" right="20.0"/>
                    </padding>
                </VBox>
            </HBox>
            <HBox>
                <VBox>
                    <padding>
                        <Insets top="20.0" right="20.0"/>
                    </padding>
                    <Button text="Buy $250!" onAction="#purchaseNormal"/>
                </VBox>
            </HBox>
            <HBox>
                <VBox>
                    <padding>
                        <Insets top="20.0" right="20.0"/>
                    </padding>
                    <Button text="Buy $500!" onAction="#purchaseElite"/>
                </VBox>
            </HBox>
        </HBox>
    </VBox>
    <VBox alignment="BOTTOM_CENTER">
        <padding>
            <Insets top="200.0"/>
        </padding>
        <Label fx:id="developersText"/>
    </VBox>
</VBox>

