<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<?import javafx.scene.control.Button?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.game.WelcomeController">
    <VBox alignment="CENTER">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="50.0"/>
        </padding>

        <Label fx:id="welcomeText"/>
        <HBox alignment="CENTER">
            <HBox>
                <Button text="Play!" onAction="#onPlayButtonClick"/>
                <padding>
                    <Insets top="20.0" right="10.0"/>
                </padding>
            </HBox>
            <HBox>
                <padding>
                    <Insets top="20.0" left="10.0"/>
                </padding>
                <Button text="Quit" onAction="#onQuitButtonClick"/>
            </HBox>
        </HBox>
    </VBox>
    <VBox alignment="BOTTOM_CENTER">
        <padding>
            <Insets top="60.0"/>
        </padding>
        <Label fx:id="developersText"/>
    </VBox>
</VBox>

